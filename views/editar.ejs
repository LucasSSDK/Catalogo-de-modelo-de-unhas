<!DOCTYPE html>
<html lang="pt-br">

    <%-include('./components/head')%>

<body>
    <header>
        <h1>Modelos de unhas</h1>
        <%-include('./components/nav')%>
    </header>
    <main>
        <div class="container">
            <div class="item">
                <img src="<%= unhas.imagem %>" alt="capa do unhas">
            </div>
            
            <div class="item texto">
                <h2><%= unhas.nome %></h2>
                <p><%= unhas.descricao %></p>
                <a href="/editar/<%= unhas.id %>">editar</a>
                <a href="/deletar/<%= unhas.id %>">excluir</a>
            </div>
        </div>
    </main>
    
        <%-include('./components/footer')%>
    <script src="/JS/script.js"></script>
</body>
</html>